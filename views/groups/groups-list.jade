extends ../partials/layout
block content
    script(type='text/javascript', src='../../javascripts/common.js')
    script(type='text/javascript', src='../../javascripts/groups-list.js')
    script(type='text/javascript', src='../../javascripts/dataTables.bootstrap.min.js')
    link(rel='stylesheet', href='../../stylesheets/dataTables.bootstrap.min.css')
    link(rel='stylesheet', href='../../stylesheets/table.css')
    include ../partials/nav-bar
    #infoModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    h4#myModalLabel.modal-title Информация за групата:
                .modal-body
                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal') Затвори
                    button.btn.btn-danger.delete-button Изтрий
                    button.btn.btn-success.save-button Запази
    div.form-horizontal
        div.container
            div.panel-group
                div.panel.panel-primary
                    div.panel-heading.panel-heading-black Групи
                    div.panel-body
                        table.data-table.table.table-striped.table-bordered.table-hover
                            thead
                                tr
                                    th.id-col
                                    th.number-col №
                                    th.col-xs-4 Име
                                    th Коментар
                                    th Участници